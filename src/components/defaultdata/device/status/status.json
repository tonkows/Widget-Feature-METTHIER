{
  "type": "multi-chart",
  "layout": "horizontal",
  "charts": [
    {
      "type": "bar chart",
      "title": "Device Status",
      "subtitle": "By Category",
      "data": {
        "labels": ["Total", "Online", "Offline"],
        "datasets": [
          {
            "label": "Devices",
            "data": [200, 180, 20],
            "backgroundColor": [
              "rgba(75, 192, 192, 0.5)",
              "rgba(54, 162, 235, 0.5)",
              "rgba(255, 99, 132, 0.5)"
            ],
            "borderColor": [
              "rgba(75, 192, 192, 1)",
              "rgba(54, 162, 235, 1)",
              "rgba(255, 99, 132, 1)"
            ],
            "borderWidth": 1
          }
        ]
      },
      "options": {
        "responsive": true,
        "maintainAspectRatio": false,
        "plugins": {
          "legend": {
            "display": true,
            "position": "top"
          }
        }
      }
    },
    {
      "type": "line chart",
      "title": "Status Trend",
      "subtitle": "Monthly",
      "data": {
        "labels": ["Jan", "Feb", "Mar", "Apr", "May"],
        "datasets": [
          {
            "label": "Online Devices",
            "data": [170, 175, 178, 180, 180],
            "borderColor": "rgba(54, 162, 235, 1)",
            "borderWidth": 2,
            "fill": false
          }
        ]
      },
      "options": {
        "responsive": true,
        "maintainAspectRatio": false,
        "plugins": {
          "legend": {
            "display": true,
            "position": "top"
          }
        }
      }
    }
  ]
} 